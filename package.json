{
  "name": "ak-portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:BananaBobby/ak-portfolio.git",
  "author": "Dmitry Belyaev <dmitry.belyaev@booking.com>",
  "license": "MIT",
  "scripts": {
    "js:build": "webpack",
    "js:watch": "webpack --watch",
    "css:build": "node-sass --include-path scss src/css/main.scss public/css/main.css",
    "css:watch": "nodemon -e scss -x \"npm run css:build\"",
    "server:start": "node ./server/index.js",
    "server:watch": "nodemon ./server/index.js",
    "build": "yarn js:build && yarn css:build",
    "watch": "yarn build && concurrently \"yarn css:watch\" \"yarn js:watch\" \"yarn server:watch\""
  },
  "dependencies": {
    "@vimeo/player": "^2.6.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "js-yaml": "^3.13.1",
    "node-sass": "^4.9.0",
    "nodemon": "^1.17.5",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^4.12.0"
  },
  "devDependencies": {
    "webpack-cli": "^3.0.8"
  }
}
